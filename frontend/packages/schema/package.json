{
  "name": "@liam-hq/schema",
  "repository": {
    "type": "git",
    "url": "https://github.com/liam-hq/liam.git"
  },
  "license": "Apache-2.0",
  "version": "0.6.1",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/index.js",
    "./parser": "./dist/parser.js"
  },
  "dependencies": {
    "@babel/parser": "7.28.6",
    "@babel/types": "7.28.6",
    "@dbml/core": "5.3.1",
    "@ruby/prism": "1.5.2",
    "fast-json-patch": "3.1.1",
    "neverthrow": "8.2.0",
    "pg-query-emscripten": "5.1.0",
    "valibot": "1.1.0",
    "yaml": "2.8.1",
    "zod": "4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@liam-hq/configs": "workspace:*",
    "@pgsql/types": "15.1.1",
    "@types/node": "22.18.11",
    "eslint": "9.38.0",
    "json-refs": "3.0.15",
    "json-schema-to-zod": "2.6.1",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "scripts": {
    "build": "tsc && pnpm run cp:prism",
    "cp:prism": "cp node_modules/@ruby/prism/src/prism.wasm dist/parser/schemarb/",
    "fmt": "concurrently \"pnpm:fmt:*\"",
    "fmt:biome": "biome check --write --unsafe .",
    "fmt:eslint": "eslint --fix .",
    "gen": "concurrently \"pnpm:gen:*\"",
    "gen:cp-prism": "cp node_modules/@ruby/prism/src/prism.wasm src/parser/schemarb/prism.wasm",
    "gen:gen-tbls-schema": "node scripts/tblsJsonSchemaToZod.mjs",
    "lint": "concurrently \"pnpm:lint:*\"",
    "lint:biome": "biome check .",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc --noEmit",
    "test": "vitest --watch=false"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json",
    "LICENSE"
  ],
  "types": "dist/index.d.ts"
}
